<h3>Editar Usuário <%= resource_name.to_s.humanize %></h3>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "well form-horizontal", :method => :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="control-group">
		<%= f.label :email,"Email", :class => "control-label" %>
		<div class="controls">
			<%= f.email_field :email %>
		</div>
	</div>
	
	<div class="control-group">
		<%= f.label :password,"Senha", :class => "control-label" %>
		<i>(deixe vazio se não deseja alterar)</i>
		<div class="controls">
			<%= f.password_field :password, :autocomplete => "off" %>
		</div>
	</div>
	
	<div class="control-group">
		<%= f.label :password_confirmation,"Confirmar senha", :class => "control-label" %>
		<div class="controls">
			<%= f.password_field :password_confirmation %>
		</div>
	</div>


	<div class="control-group">
		<%= f.label :current_password,"Senha atual", :class => "control-label" %>
		 <i>(precisamos de sua senha atual para confirmar a alteração)</i>
		<div class="controls">
			<%= f.password_field :current_password %>
		</div>
	</div>

	<div class="form-actions">
		<%= f.submit "Atualizar",:class => "btn btn-primary" %>
	</div>
  
<% end %>

<p> <%= link_to "Cancelar minha conta", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>.</p>


