<div class="modal-header">	
	<button data-dismiss="modal" class="close" type="button">×</button>
	<h3>Resumo da Natureza <%=@resource.nature.nd%></h3>
</div>


<div class="modal-body">
	
	<div class="row-fluid">
	<div class="span12">
		<ul class="unstyled">
		<li><strong>Total de empenhos : </strong><%=real_format(@resource.total_efforts)%></li>
		<li><strong>Total de pagamentos : </strong><%=real_format(@resource.total_payments)%></li>
		</ul>
	</div>
	</div>
	<br/>
	<br/>
	
	<div class="row-fluid">
	<div class="span12">
		
		<%if @resource.transfers.empty?%>
			<strong>Não há Sub Repasses registrados para esta natureza!</strong>
		<%else%>
		<strong>Sub Repasses</strong>
		<table class="table table-striped" >
			<tr>
			    <th>NC</th>
				<th>Campus</th>
			    <th>Valor</th>
				<th>Devolvido</th>
			</tr>
			
			<% @resource.transfers.each do |t| %>
			  <tr>
			    <td><%= t.identification %></td>
			    <td><%= t.unit.name%></td>
				<td><%= real_format(t.value)%></td>
				<td><%= real_format(t.total_devolutions)%></td>
			  </tr>
			<%end%>
			<tr>
				<td colspan="2"><strong>Total</strong></td>
				<td><%= real_format(@resource.total_transfers)%></td>
				<td><%= real_format(@resource.total_devolutions_transfers)%></td>
			</tr>

			
		</table>
		<%end%>
	</div>
	</div>
	
</div>

<div class="modal-footer">
	
	<a data-dismiss="modal" class="btn" href="#">Fechar</a>

</div>		

	
	