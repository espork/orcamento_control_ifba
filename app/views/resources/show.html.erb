<%=  javascript_tag  do%>

	function showPayment(url){
	
		$('#divNovoPagamento').empty();
		$("#divNovoPagamento").load(url);
		$("#divNovoPagamento").modal();
	}

<%end%>

<div class="row-fluid">
	<div class="span10">
		<h3>Or√ßamento <%=@resource.budget.start_date.strftime("%d/%m/%Y")%> - <%=@resource.budget.end_date.strftime("%d/%m/%Y")%></h3>
	</div>
</div>

<div class="row-fluid">
	<div class="span10">
		<ul class="unstyled">
			<li><strong>Natureza : </strong><%=@resource.nature.nd%></li>
			<li><strong>Valor : </strong><%=real_format(@resource.value)%></li>
			<li id="resource_balance_<%=@resource.id%>">
				<%=balance(@resource.balance)%>
			</li>
		</ul>
	</div>
</div>
