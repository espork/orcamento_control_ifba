<div class="span11">
	<h3>Orçamento <%=@budget.start_date.strftime("%d/%m/%Y")%> - <%=@budget.end_date.strftime("%d/%m/%Y")%></h3>
</div>
<br/>
<br/>
<br/>


<div class="span12">
	<ul class="unstyled">
		<li><strong>Número da NC : </strong><%=@budget.nc_number%></li>
		<li><strong>Valor : </strong><%=@budget.total%></li>
	</ul>
</div>

<br/>
<br/>
<br/>
<br/>

<div class="span11">
<table class="table table-striped" >
  <tr>
    <th>Natureza</th>
    <th>Valor</th>
	<th>Gasto</th>
	<th>Saldo</th>
    <th>Opções</th>
    
  </tr>

	<% @budget.resources.each do |r| %>
  <tr>
    <td><%= r.nature.nd %></td>
    <td><%= r.value%></td>
	<td><%= ""%></td>
	<td><%= ""%></td>
	<td>
		<ul>
			
			<li class="icon-edit" title="Editar">
				<%=link_to content_tag(:i,nil,:class=>"icon-edit"),edit_budget_path(@budget)%>
			</li>
			
			<li class="icon-edit" title="Detalhes">
				<%=link_to content_tag(:i,nil,:class=>"icon-edit"),r%>
			</li>
		</ul>
	</td>
  </tr>
	<%end%>
</table>

<br />

</div>